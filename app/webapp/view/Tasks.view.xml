<mvc:View
    controllerName="intern.portal.controller.Tasks"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    
    <ScrollContainer height="100%" vertical="true">
        <VBox class="sapUiMediumMargin">
            
            <!-- Header Section -->
            <Panel headerText="My Onboarding Tasks" class="sapUiLargeMarginBottom">
                <headerToolbar>
                    <Toolbar>
                        <Title text="My Onboarding Tasks" level="H2"/>
                        <ToolbarSpacer/>
                        <Button
                            icon="sap-icon://refresh"
                            tooltip="Refresh Tasks"
                            press="onRefreshTasks"
                            type="Transparent"/>
                        <Button
                            icon="sap-icon://add"
                            tooltip="Add Task"
                            press="onAddTask"
                            type="Transparent"/>
                    </Toolbar>
                </headerToolbar>
                <content>
                    <VBox class="sapUiMediumMargin">
                        <HBox alignItems="Center" class="sapUiMediumMarginBottom">
                            <Text text="Track your onboarding progress and complete required tasks." class="sapUiMediumText"/>
                        </HBox>
                        
                        <HBox alignItems="Center">
                            <Text text="Overall Progress: " class="sapUiMediumMarginEnd"/>
                            <ProgressIndicator
                                percentValue="{user>/stats/progressPercentage}"
                                width="300px"
                                state="Success"
                                displayValue="{user>/stats/progressPercentage}%"/>
                        </HBox>
                    </VBox>
                </content>
            </Panel>
            
            <!-- Task Categories -->
            <HBox class="sapUiLargeMarginBottom">
                
                <!-- Pending Tasks -->
                <Panel headerText="Pending Tasks" width="48%" class="sapUiSmallMarginEnd">
                    <content>
                        <List class="sapUiMediumMargin">
                            <StandardListItem
                                title="Complete Security Training"
                                description="Due: Tomorrow"
                                icon="sap-icon://shield"
                                iconInset="false"
                                info="High Priority"
                                infoState="Error"
                                type="Active"
                                press="onTaskPress"/>
                            <StandardListItem
                                title="Submit Internship Agreement"
                                description="Due: This week"
                                icon="sap-icon://document"
                                iconInset="false"
                                info="Medium Priority"
                                infoState="Warning"
                                type="Active"
                                press="onTaskPress"/>
                            <StandardListItem
                                title="Attend Team Introduction"
                                description="Due: Next week"
                                icon="sap-icon://group"
                                iconInset="false"
                                info="Low Priority"
                                infoState="Success"
                                type="Active"
                                press="onTaskPress"/>
                        </List>
                    </content>
                </Panel>
                
                <!-- Completed Tasks -->
                <Panel headerText="Completed Tasks" width="48%">
                    <content>
                        <List class="sapUiMediumMargin">
                            <StandardListItem
                                title="HR Documentation"
                                description="Completed: 2 days ago"
                                icon="sap-icon://complete"
                                iconInset="false"
                                info="Completed"
                                infoState="Success"/>
                            <StandardListItem
                                title="Office Tour"
                                description="Completed: 3 days ago"
                                icon="sap-icon://building"
                                iconInset="false"
                                info="Completed"
                                infoState="Success"/>
                            <StandardListItem
                                title="IT Setup"
                                description="Completed: 1 week ago"
                                icon="sap-icon://laptop"
                                iconInset="false"
                                info="Completed"
                                infoState="Success"/>
                            <StandardListItem
                                title="Welcome Orientation"
                                description="Completed: 1 week ago"
                                icon="sap-icon://hello-world"
                                iconInset="false"
                                info="Completed"
                                infoState="Success"/>
                        </List>
                    </content>
                </Panel>
                
            </HBox>
            
            <!-- Task Statistics -->
            <Panel headerText="Task Statistics" class="sapUiLargeMarginBottom">
                <content>
                    <HBox class="sapUiMediumMargin" justifyContent="SpaceAround">
                        <VBox alignItems="Center">
                            <core:Icon src="sap-icon://task" size="2rem" color="#0070f2"/>
                            <Title text="7" level="H3" class="sapUiSmallMarginTop"/>
                            <Text text="Total Tasks"/>
                        </VBox>
                        <VBox alignItems="Center">
                            <core:Icon src="sap-icon://complete" size="2rem" color="#30914c"/>
                            <Title text="4" level="H3" class="sapUiSmallMarginTop"/>
                            <Text text="Completed"/>
                        </VBox>
                        <VBox alignItems="Center">
                            <core:Icon src="sap-icon://pending" size="2rem" color="#e9730c"/>
                            <Title text="3" level="H3" class="sapUiSmallMarginTop"/>
                            <Text text="Pending"/>
                        </VBox>
                        <VBox alignItems="Center">
                            <core:Icon src="sap-icon://warning" size="2rem" color="#d20a0a"/>
                            <Title text="1" level="H3" class="sapUiSmallMarginTop"/>
                            <Text text="Overdue"/>
                        </VBox>
                    </HBox>
                </content>
            </Panel>
            
            <!-- Quick Actions -->
            <Panel headerText="Quick Actions" class="sapUiLargeMarginBottom">
                <content>
                    <HBox class="sapUiMediumMargin" justifyContent="SpaceAround">
                        <Button
                            text="View All Tasks"
                            icon="sap-icon://list"
                            type="Emphasized"
                            press="onViewAllTasks"/>
                        <Button
                            text="Add New Task"
                            icon="sap-icon://add"
                            type="Default"
                            press="onAddTask"/>
                        <Button
                            text="Export Tasks"
                            icon="sap-icon://download"
                            type="Default"
                            press="onExportTasks"/>
                        <Button
                            text="Get Help"
                            icon="sap-icon://sys-help"
                            type="Default"
                            press="onGetHelp"/>
                    </HBox>
                </content>
            </Panel>
            
        </VBox>
    </ScrollContainer>
</mvc:View>
