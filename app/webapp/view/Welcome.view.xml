<mvc:View
    controllerName="intern.portal.controller.Welcome"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    displayBlock="true">

    <ScrollContainer height="100%" vertical="true">
        <VBox class="sapUiMediumMargin">

            <!-- Hero Section -->
            <Panel headerText="Welcome to Your Internship Journey!" class="sapUiLargeMarginBottom">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Welcome to Your Internship Journey!" level="H2"/>
                        <ToolbarSpacer/>
                        <Button
                            icon="sap-icon://refresh"
                            tooltip="Refresh Data"
                            press="onRefreshData"
                            type="Transparent"/>
                    </Toolbar>
                </headerToolbar>
                <content>
                    <VBox class="sapUiMediumMargin">
                        <HBox alignItems="Center" justifyContent="SpaceBetween">
                            <VBox>
                                <Text text="Hello, {user>/name}!" class="sapUiLargeText sapUiMediumMarginBottom"/>
                                <Text text="You're doing great! Keep up the excellent work." class="sapUiMediumText"/>
                            </VBox>
                            <f:Avatar
                                src="{user>/avatar}"
                                displaySize="L"
                                initials="{user>/name}"
                                backgroundColor="Accent1"/>
                        </HBox>

                        <HBox class="sapUiLargeMarginTop" alignItems="Center">
                            <Text text="Overall Progress: " class="sapUiMediumMarginEnd"/>
                            <ProgressIndicator
                                percentValue="{user>/stats/progressPercentage}"
                                width="200px"
                                state="Success"
                                displayValue="{user>/stats/progressPercentage}%"/>
                        </HBox>
                    </VBox>
                </content>
            </Panel>

            <!-- Quick Actions Tiles -->
            <Panel headerText="Quick Actions" class="sapUiLargeMarginBottom">
                <content>
                    <HBox class="sapUiMediumMargin" justifyContent="SpaceAround">
                        <VBox alignItems="Center" class="intern-portal-tile sapUiMediumMargin">
                            <Button
                                icon="sap-icon://document"
                                text="Company Policies"
                                type="Emphasized"
                                width="200px"
                                press="onNavigateToPolicy"
                                class="sapUiMediumMarginBottom"/>
                            <Text text="View policies and guidelines" textAlign="Center"/>
                        </VBox>

                        <VBox alignItems="Center" class="intern-portal-tile sapUiMediumMargin">
                            <Button
                                icon="sap-icon://discussion-2"
                                text="AI Assistant"
                                type="Default"
                                width="200px"
                                press="onNavigateToChat"
                                class="sapUiMediumMarginBottom"/>
                            <Text text="Get help and ask questions" textAlign="Center"/>
                        </VBox>

                        <VBox alignItems="Center" class="intern-portal-tile sapUiMediumMargin">
                            <Button
                                icon="sap-icon://task"
                                text="My Tasks"
                                type="Default"
                                width="200px"
                                press="onNavigateToTasks"
                                class="sapUiMediumMarginBottom"/>
                            <Text text="Track your progress" textAlign="Center"/>
                        </VBox>
                    </HBox>
                </content>
            </Panel>

            <!-- Statistics Cards -->
            <Panel headerText="Your Progress Statistics" class="sapUiLargeMarginBottom">
                <content>
                    <HBox class="sapUiMediumMargin" justifyContent="SpaceAround">
                        <VBox alignItems="Center" class="sapUiMediumMargin">
                            <core:Icon src="sap-icon://task" size="3rem" color="#0070f2"/>
                            <Title text="{user>/stats/tasksCompleted}" level="H2" class="sapUiSmallMarginTop"/>
                            <Text text="Tasks Completed" class="sapUiSmallMarginTop"/>
                            <Text text="Great progress!" class="sapUiTinyText"/>
                        </VBox>

                        <VBox alignItems="Center" class="sapUiMediumMargin">
                            <core:Icon src="sap-icon://document" size="3rem" color="#e9730c"/>
                            <Title text="{user>/stats/policiesRead}" level="H2" class="sapUiSmallMarginTop"/>
                            <Text text="Policies Read" class="sapUiSmallMarginTop"/>
                            <Text text="Review more policies" class="sapUiTinyText"/>
                        </VBox>

                        <VBox alignItems="Center" class="sapUiMediumMargin">
                            <core:Icon src="sap-icon://calendar" size="3rem" color="#5d36ff"/>
                            <Title text="{user>/stats/daysRemaining}" level="H2" class="sapUiSmallMarginTop"/>
                            <Text text="Days Remaining" class="sapUiSmallMarginTop"/>
                            <Text text="Make them count!" class="sapUiTinyText"/>
                        </VBox>
                    </HBox>
                </content>
            </Panel>

            <!-- Recent Activity -->
            <Panel headerText="Recent Activity" class="sapUiLargeMarginBottom">
                <content>
                    <List class="sapUiMediumMargin">
                        <StandardListItem
                            title="Completed HR Documentation"
                            description="2 hours ago"
                            icon="sap-icon://complete"
                            iconInset="false"/>
                        <StandardListItem
                            title="Read Remote Work Policy"
                            description="Yesterday"
                            icon="sap-icon://document"
                            iconInset="false"/>
                        <StandardListItem
                            title="Started SAP BTP Training"
                            description="2 days ago"
                            icon="sap-icon://learning-assistant"
                            iconInset="false"/>
                    </List>
                </content>
            </Panel>

        </VBox>
    </ScrollContainer>
</mvc:View>
