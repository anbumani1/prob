# Environment Variables Template for Intern Portal Application
# ===========================================================
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENAI_MODEL=openai/gpt-3.5-turbo

# Server Configuration
PORT=4004
NODE_ENV=development

# Application Configuration
APP_NAME=Intern Portal
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-Powered Intern Onboarding Portal

# Database Configuration (for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=intern_portal
# DB_USER=admin
# DB_PASSWORD=your_password_here

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_TIMEOUT=3600000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:4004
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false

# External Services (for future integrations)
# SAP_BTP_URL=
# SAP_BTP_CLIENT_ID=
# SAP_BTP_CLIENT_SECRET=

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@company.com
# SMTP_PASS=your-app-password
